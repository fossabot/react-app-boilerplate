{
  "name": "react-app-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/arnavyash/react-app-boilerplate.git",
  "author": "Arnav Yash <arnavyash2004@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:dev": "webpack serve --env development",
    "build": "rimraf dist && webpack --env production",
    "build:dev": "rimraf dist && webpack --env development",
    "lint": "eslint --format=pretty --cache --ext js,jsx .",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "eslint --format=pretty --ext js,jsx --fix",
    "fmt": "cross-env prettier --write '**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}'",
    "fmt:check": "cross-env prettier-check '**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:upgrade": "npm test -- --updateSnapshot",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm test -- --ci",
    "codecov": "codecov"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/config/**",
      "!**/coverage/**",
      "!webpack.config.js",
      "!**/dist/**",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "testURL": "http://localhost:8085"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/{.[^.],}*.{js,jsx}": [
      "npm run lint:staged"
    ],
    "**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.10",
    "@babel/preset-react": "7.12.10",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "codecov": "3.8.1",
    "cross-env": "7.0.3",
    "eslint": "7.15.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "7.0.0",
    "eslint-formatter-pretty": "4.0.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "html-loader": "1.3.2",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "prettier-check": "2.0.0",
    "react-test-renderer": "17.0.1",
    "rimraf": "3.0.2",
    "webpack": "5.10.2",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "5.7.0",
    "webpackbar": "5.0.0-3"
  },
  "dependencies": {
    "app-root-path": "3.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  }
}
